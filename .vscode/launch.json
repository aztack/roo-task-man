  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run roo-task-man",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/roo-task-man",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-tags js_hooks",
      "console": "integratedTerminal",
      "args": [
        "--debug",
        "--editor",
        "Trae",
        "--hooks-dir",
        "./hooks/custom"
      ]
    },
    {
      "name": "Test All Packages",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-tags js_hooks"
    }
  ]
}
